
@model OnlineShopping.Models.Cart

@{
    ViewData["Title"] = "Carts Create";
}

<h1>Create Cart</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopperID" class="control-label">ShopperID:  @ViewBag.ShopperID</label>
                <input asp-for="ShopperID" type="hidden" name="ShopperID" value=@ViewBag.ShopperID />
            </div>
            <div class="form-group">
                <label asp-for="ShopperID" class="control-label">Name:  @ViewBag.ShopperName</label>
            </div>
            <div class="form-group">
                <label asp-for="ShopperID" class="control-label">Email:  @ViewBag.ShopperEmail</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
