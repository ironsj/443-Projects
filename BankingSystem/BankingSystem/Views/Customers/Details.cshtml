                                @Html.DisplayFor(modelItem => item.DatePaid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConfirmationNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayerID)
                            </td>

