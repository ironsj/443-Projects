    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bills)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Bill</th>
                    <th>Creditor</th>
                    <th>AmountDue</th>
                    <th>DueDate</th>
                    <th>Paid</th>
                    <th>PaidDate</th>
                    <th>ConfirmationNumber</th>
                    <th>Account</th>
                    <th>Payer</th>
                </tr>
                @foreach (var item in Model.Bills)
                {
                    @if (@ViewBag.AllBills || !item.Paid)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Creditor)
                            </td>
