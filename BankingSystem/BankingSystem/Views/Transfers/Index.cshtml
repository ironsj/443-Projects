@model IEnumerable<BankingSystem.Models.Transfer>

@{
    ViewData["Title"] = "Index";
}

<h1>Transfers Index</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
@if (ViewBag.EnableFilter)
{
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                From AccountID: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |

                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>
}

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["SortByCustomer"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-enableFilter="@ViewBag.EnableFilter">From Account</a>
            </th>
            <th>
                Amount
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["SortByAccount"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-enableFilter="@ViewBag.EnableFilter">To Acccount</a>
            </th>
            <th>   
                Transfer Time
            </th>
            <th></th>
        </tr>

  
  
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToAccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSlot)
            </td>
        </tr>
        }
    </tbody>
</table>
