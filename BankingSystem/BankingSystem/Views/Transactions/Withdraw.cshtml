
@model BankingSystem.Models.Transaction

@{
    ViewData["Title"] = "Withdraw";
}

<h1>Withdraw Transaction</h1>
<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label">CustomerID:  @ViewBag.CustomerID</label>
            </div>
            <div>
                <label asp-for="AccountID" class="control-label">AccountID:  @ViewBag.AccountID</label>
                <input asp-for="AccountID" type="hidden" name="AccountID" value=@ViewBag.AccountID />
            </div>
            <div>
                <label class="control-label">Balance:  @ViewBag.Balance</label>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

